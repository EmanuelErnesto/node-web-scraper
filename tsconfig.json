{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true, 
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules"
  ]
}